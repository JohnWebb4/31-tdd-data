{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "build",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "build.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
